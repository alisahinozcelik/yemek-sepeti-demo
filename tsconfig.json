{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"**/*.d.ts"
	]
}